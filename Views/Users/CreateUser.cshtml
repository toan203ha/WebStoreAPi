@model WebStore.Models.Users

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create User</title>
    <!-- Include Bootstrap CSS for responsive and modern design -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }
        .container {
            margin-top: 50px;
        }
        .notification {
            background-color: #d4edda;
            color: #155724;
            padding: 10px;
            border-radius: 5px;
            margin-top: 20px;
        }
        h1 {
            color: #343a40;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="text-center">Create New User</h1>

        <!-- Form for creating a new user -->
        <form asp-action="CreateUser" method="post" class="bg-white p-4 shadow-sm rounded">
            <div class="form-group">
                <label for="fullNameCus">Username:</label>
                <input type="text" class="form-control" id="fullNameCus" name="fullNameCus" required>
            </div>

            <div class="form-group">
                <label for="addressCus">Address:</label>
                <input type="text" class="form-control" id="addressCus" name="addressCus" required>
            </div>

            <div class="form-group">
                <label for="emailCus">Email:</label>
                <input type="email" class="form-control" id="emailCus" name="emailCus" required>
            </div>
            <div class="form-group">
                <label for="rank">passWord:</label>
                <input type="text" class="form-control" id="passWord" name="passWord" required>
            </div>
            <div class="form-group">
                <label for="phoneNumCus">Phone Number:</label>
                <input type="text" class="form-control" id="phoneNumCus" name="phoneNumCus" required>
            </div>

            <div class="form-group">
                <label for="genderCus">Gender:</label>
                <input type="text" class="form-control" id="genderCus" name="genderCus" required>
            </div>

            <div class="form-group">
                <label for="rank">Rank:</label>
                <input type="number" class="form-control" id="rank" name="rank" required>
            </div>


     @*        <div class="form-group">
                <label for="role">Role:</label>
                <select id="role" name="role" class="form-control" required>
                    <option value="Admin">Admin</option>
                    <option value="User">User</option>
                </select>
            </div> *@

          @*   <div class="form-group">
                <label for="status">Status:</label>
                <select id="status" name="status" class="form-control" required>
                    <option value="Active">Active</option>
                    <option value="Inactive">Inactive</option>
                </select>
            </div> *@

            <button type="submit" class="btn btn-primary btn-block">Create</button>
        </form>

        <!-- Notification message (if any) -->
        @if (TempData["Message"] != null)
        {
            <div class="notification">
                <p>@TempData["Message"]</p>
            </div>
        }
    </div>

    <!-- Include Bootstrap JS for responsive components (optional) -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
