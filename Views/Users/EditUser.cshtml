@model WebStore.Models.Users

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit User</title>
    <!-- Include Bootstrap CSS for modern design -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .container {
            margin-top: 50px;
        }

        .notification {
            background-color: #d4edda;
            color: #155724;
            padding: 10px;
            border-radius: 5px;
            margin-top: 20px;
        }

        h1 {
            color: #343a40;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="text-center">Chỉnh Sửa Thông Tin Người Dùng</h1>

        <!-- Form for editing user details -->
        @using (Html.BeginForm("EditUser", "Users", FormMethod.Post, new { @class = "bg-white p-4 shadow-sm rounded" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.HiddenFor(m => m._id)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.fullNameCus)
                @Html.EditorFor(m => m.fullNameCus, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.emailCus)
                @Html.EditorFor(m => m.emailCus, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.passWord)
                @Html.EditorFor(m => m.passWord, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.phoneNumCus)
                @Html.EditorFor(m => m.phoneNumCus, new { htmlAttributes = new { @class = "form-control" } })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.genderCus)
                @Html.EditorFor(m => m.genderCus, new { htmlAttributes = new { @class = "form-control" } })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.addressCus)
                @Html.EditorFor(m => m.addressCus, new { htmlAttributes = new { @class = "form-control" } })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.rank)
                @Html.EditorFor(m => m.rank, new { htmlAttributes = new { @class = "form-control" } })
            </div>

       
            <div class="d-flex gap-2" >
                <a href="@Url.Action("Index")" class="btn btn-secondary">Quay lại danh sách người dùng</a>
                <button type="submit" class="btn btn-primary">Cập Nhật</button>
            </div>



        }

        <!-- Link to go back to user list -->

        <!-- Display success or error message -->
        @if (TempData["Message"] != null)
        {
            <div class="notification">
                <p>@TempData["Message"]</p>
            </div>
        }
    </div>

    <!-- Include jQuery (required for Bootstrap's JavaScript) -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>

    <!-- Include Popper.js (required for Bootstrap's dropdown, tooltips, etc.) -->
 
    <!-- Include Bootstrap JS -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
