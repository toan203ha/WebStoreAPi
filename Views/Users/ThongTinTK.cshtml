@model WebStore.Models.Users

@{
    ViewData["Title"] = "Chi tiết người dùng";
}

<h1>@ViewData["Title"]</h1>

<div class="user-details">
    <div class="form-group">
        <label><strong>Tên người dùng:</strong></label>
        <p>@Model.fullNameCus</p>
    </div>

    <div class="form-group">
        <label><strong>Địa chỉ:</strong></label>
        <p>@Model.addressCus</p>
    </div>

    <div class="form-group">
        <label><strong>Email:</strong></label>
        <p>@Model.emailCus</p>
    </div>

    <div class="form-group">
        <label><strong>Số điện thoại:</strong></label>
        <p>@Model.phoneNumCus</p>
    </div>

    <div class="form-group">
        <label><strong>Giới tính:</strong></label>
        <p>@Model.genderCus</p>
    </div>

    <div class="form-group">
        <label><strong>Xếp hạng:</strong></label>
        <p>@Model.rank</p>
    </div>

    <div class="form-group">
        <a href="@Url.Action("Index", "Users")" class="btn btn-secondary">Quay lại danh sách</a>
        <a href="@Url.Action("EditUser", "Users", new { id = Model._id })" class="btn btn-primary">Chỉnh sửa</a>
        <a href="@Url.Action("Delete", "Users", new { id = Model._id })" class="btn btn-danger">Xóa</a>
    </div>
</div>
