@model WebStore.Models.Product
 

<div class="container mt-4">
 
    <div class="row">
        <div class="col-md-6">
            <!-- Product Image -->
            <div class="card">
                <div class="card-body text-center">
                    @if (string.IsNullOrEmpty(Model.IMG))
                    {
                        <p class="text-muted">No image available</p>
                    }
                    else
                    {
                        <img src="@($"data:image/jpeg;base64,{Model.IMG}")" alt="Product Image" class="img-fluid rounded" style="max-height:auto; object-fit: cover;" />
                    }
                </div>
            </div>
        </div>
        <div class="col-md-6">
             <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4>Thông Tin</h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Id:</dt>
                        <dd class="col-sm-8">@Model._id</dd>

                        <dt class="col-sm-4">Name:</dt>
                        <dd class="col-sm-8">@Model.TEN</dd>

                        <dt class="col-sm-4">Price:</dt>
                        <dd class="col-sm-8">@Model.PRICE</dd>

                        <dt class="col-sm-4">Quantity In Stock:</dt>
                        <dd class="col-sm-8">@Model.SoluongTon</dd>

                        <dt class="col-sm-4">Description:</dt>
                        <dd class="col-sm-8">@Model.DES</dd>

                        <dt class="col-sm-4">Discount Quantity:</dt>
                        <dd class="col-sm-8">@Model.SoLuongGG</dd>

                        <dt class="col-sm-4">Category Id:</dt>
                        <dd class="col-sm-8">@Model.CateID</dd>

                        <dt class="col-sm-4">Publisher Id:</dt>
                        <dd class="col-sm-8">@Model.MaNXB</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <a href="@Url.Action("Index", "Product")" class="btn btn-primary">Back to List</a>
        <a href="@Url.Action("EditPro", "Product", new { id = Model._id })" class="btn btn-warning">Edit</a>
    </div>
</div>

<!-- Optional: Add Bootstrap JS and Popper.js -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
 <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
